<% ct_cau_hois.each_with_index do |ct_cau_hoi, index| %>
  <% if ct_cau_hoi.tra_loi_dung %>
    <div class="panel panel-success">
  <% else %>
    <div class="panel panel-danger">
  <% end %>
    <div class="panel-heading">
      <span><%= t ".cau" %> <%= index + 1 %>:</span>
      <%= ct_cau_hoi.cau_hoi.noi_dung.html_safe %>
    </div>
    <div class="panel-body">
      <%= render "phuong_ans", phuong_ans: ct_cau_hoi.cau_hoi.phuong_ans,
        ct_cau_hoi: ct_cau_hoi %>
    </div>
  </div>
<% end %>
