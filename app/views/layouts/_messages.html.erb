<script type="text/javascript">
  <% flash.each do |message_type, message| %>
    <% if message_type == "success" || message_type == "notice" %>
      $.growl.notice({title: '', message: '<%= message %>'});
    <% else %>
      $.growl.error({title: '', message: '<%= message %>'});
    <% end %>
  <% end %>
</script>
