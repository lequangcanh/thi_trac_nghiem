<div class="modal fade" id="cauHoiModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t ".header" %></h4>
      </div>
      <div class="modal-body" style="overflow-y: auto">
        <% current_giao_vien.mon_hocs.each do |mon_hoc| %>
          <div class="col-sm-4 frame">
            <%= image_tag "question.jpg", size: "100x100" %>
            <%= link_to gv_cau_hois_path(mon_hoc_id: mon_hoc.id) do %>
              <h4><%= mon_hoc.ten %></h4>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t ".close" %>
        </button>
      </div>
    </div>

  </div>
</div>
