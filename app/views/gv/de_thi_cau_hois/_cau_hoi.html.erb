<div class="panel panel-primary">
  <div class="panel-heading">
    <span class="label label-success">
      <%= t "gv.cau_hois.do_kho.#{cau_hoi.do_kho}" %>
    </span>
    <span>&nbsp;</span>
    <span>
      <%= cau_hoi.noi_dung.html_safe %>
    </span>
    </div>
  <div class="panel-body">
    <%= render "gv/cau_hois/phuong_an", phuong_ans: cau_hoi.phuong_ans %>
  </div>
  <div class="panel-footer">
    <span>
      <%= t ".author" %>: <%= cau_hoi.giao_vien.ho_ten_day_du %>
    </span>
    <span style="float: right;">
      <%= t ".choose" %>
      <%= check_box_tag :choose_question, false, false, data: {id: cau_hoi.id},
        id: "cau-hoi-#{cau_hoi.id}", class: "gv-choose-question" %>
    </span>
  </div>
</div>
