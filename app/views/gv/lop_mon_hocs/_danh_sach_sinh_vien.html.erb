<table class="table table-bordered table-hover dssv-lophp-header">
  <thead>
    <tr>
      <th><%= t ".stt" %></th>
      <th><%= t ".std_code" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".birthday" %></th>
      <th><%= t ".middle_exam_score" %></th>
      <th><%= t ".final_exam_score" %></th>
    </tr>
  </thead>
  <tbody>
    <% sinh_viens.each_with_index do |sinh_vien, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= sinh_vien.ma_sinh_vien %></td>
        <td><%= sinh_vien.ho_ten_day_du %></td>
        <td><%= l sinh_vien.ngay_sinh, format: :date_month_year_concise if
          sinh_vien.ngay_sinh.present? %></td>
        <% if lop_mon_hoc.de_thi_gk_id.present? %>
          <td><%= diem_bai_thi_cua_sv sinh_vien.id, lop_mon_hoc.de_thi_gk_id %></td>
        <% else %>
          <td><span class="label label-warning"><%= t ".not_found" %></span></td>
        <% end %>
        <% if lop_mon_hoc.de_thi_ck_id.present? %>
          <td><%= diem_bai_thi_cua_sv sinh_vien.id, lop_mon_hoc.de_thi_ck_id %></td>
        <% else %>
          <td><span class="label label-warning"><%= t ".not_found" %></span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
