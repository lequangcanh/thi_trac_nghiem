<div class="col-md-10 col-md-offset-1">
  <h1><%= @de_thi.tieu_de %></h1>
  <h4 class="subject"><%= t ".subject" %>: <%= @de_thi.mon_hoc.ten %></h4>
  <p style="text-align: center;">
    <span class="label label-info">
      <span class="glyphicon glyphicon-time"></span>
      <span><%= t ".time_duration" %></span>
      <%= l @de_thi.thoi_gian_mo_de, format: :full_time if @de_thi.thoi_gian_mo_de %>
      <span> - </span>
      <%= l @de_thi.thoi_gian_dong_de, format: :full_time if @de_thi.thoi_gian_dong_de %>
    </span>
  </p>
  <p style="text-align: center;">
    <%= get_status @de_thi %>
    <span>&nbsp</span>
    <span class="label label-info">
      <%= t ".time" %>:
      <%= @de_thi.thoi_gian %>
      <%= t ".minute" %>
    </span>
    <span>&nbsp</span>
    <span class="label label-info">
      <%= t ".question_count" %>:
      <%= @de_thi.cau_hois.count %>
      <span>/</span>
      <%= @de_thi.so_cau_hoi %>
    </span>
  </p>
  <p class="subject">
    <span class="label label-default">
      <span><%= t ".nho_count" %>: </span>
      <%= @de_thi.cau_hois.tong_cau_nho.count %>
    </span>
    <span>&nbsp</span>
    <span class="label label-default">
      <span><%= t ".hieu_count" %>: </span>
      <%= @de_thi.cau_hois.tong_cau_hieu.count %>
    </span>
    <span>&nbsp</span>
    <span class="label label-default">
      <span><%= t ".phan_tich_count" %>: </span>
      <%= @de_thi.cau_hois.tong_cau_phan_tich.count %>
    </span>
    <span>&nbsp</span>
    <span class="label label-default">
      <span><%= t ".van_dung_count" %>: </span>
      <%= @de_thi.cau_hois.tong_cau_van_dung.count %>
    </span>
    <span>&nbsp</span>
    <span class="label label-default">
      <span><%= t ".tong_hop_count" %>: </span>
      <%= @de_thi.cau_hois.tong_cau_tong_hop.count %>
    </span>
  </p>

  <div style="margin-bottom: 20px;">
    <%= link_to t(".edit_exam"), edit_gv_de_thi_path(@de_thi),
      class: "btn btn-primary" %>
    <%= link_to t(".choose_question"),
      gv_de_thi_cau_hois_path(de_thi_id: @de_thi.id),
      class: "btn btn-default" %>
    <%= link_to t(".delete"), gv_de_thi_path(@de_thi), method: :delete,
      data: {confirm: t(".sure")}, class: "btn btn-danger" %>
  </div>
  <%= render "cau_hoi", de_thi: @de_thi %>
</div>
